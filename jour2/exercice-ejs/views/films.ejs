<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>Formation node</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }
        header {
            height: 5em;
            background-color: aquamarine;
        }
        footer {
            height: 5em;
            background-color: aquamarine;
        }
        h1 {
            text-align: center;
        }
        .film-list {
            display: flex;
            flex-flow: row wrap;
            justify-content: space-around;
            padding: 0;
            margin: 0;
            list-style: none;
        }
        .film-card {
            padding: 5px;
            width: 250px;
            height: 250px;
            margin-top: 10px;
            font-weight: bold;
            text-align: center;
        }
    </style>
  </head>
  <body>
    <header></header>
    <h1>Vidéothèque</h1>
    <div class="container">
        <form action="/film/add" method="post">
            <div class="form-group mb-2">
                <label for="title">Nom</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Ajouter un film</button>
        </form>
    </div>
    <div class="film-list">
        <% films.forEach(function(film) { %>
            <div class="film-card">
                <p>Titre : <%= film.title %></p>
                <div class="film-affiche"></div>
            </div>
        <% }); %>
    </div>
    <footer></footer>
  </body>
</html>